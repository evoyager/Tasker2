<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res/android"
    app:id="@+id/content_frame"
    app:layout_width="match_parent"
    app:layout_height="match_parent">
    <RelativeLayout app:layout_width="match_parent" app:layout_height="match_parent">
        <android.support.design.widget.CoordinatorLayout app:id="@+id/coordinator" app:layout_width="match_parent" app:layout_height="match_parent">
            <android.support.v4.view.ViewPager app:id="@+id/pager" app:layout_width="match_parent" app:layout_height="match_parent" app:layout_behavior="@string/appbar_scrolling_view_behavior" />
            <android.support.design.widget.AppBarLayout app:id="@+id/app_bar_layout" app:layout_width="match_parent" app:layout_height="wrap_content">
                <android.support.v7.widget.Toolbar app:id="@+id/toolbar" app:layout_width="match_parent" app:layout_height="match_parent" app:layout_scrollFlags="5">
                    <android.support.v7.widget.SearchView app:layout_gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end" app:id="@+id/searchView" app:layout_width="wrap_content" app:layout_height="wrap_content" app:searchIcon="@drawable/ic_search_white_24dp" app:theme="@style/Theme_AppCompat_NoActionBar" />
                </android.support.v7.widget.Toolbar>
                <android.support.design.widget.TabLayout app:id="@+id/tab_layout" app:layout_width="match_parent" app:layout_height="match_parent" app:layout_scrollFlags="5" app:tabIndicatorColor="0x106000f" app:tabTextColor="0x106000f" app:tabSelectedTextColor="0x106000f" />
            </android.support.design.widget.AppBarLayout>
            <android.support.design.widget.FloatingActionButton app:id="@+id/fab" app:layout_width="wrap_content" app:layout_height="wrap_content" app:layout_margin="@dimen/fab_margin" app:src="@drawable/ic_add_white_24dp" app:layout_anchor="@+id/pager" app:layout_anchorGravity="800055" app:rippleColor="@color/ripple_material_light" />
        </android.support.design.widget.CoordinatorLayout>
        <com.google.android.gms.ads.AdView app:id="@+id/banner" app:layout_width="match_parent" app:layout_height="wrap_content" app:layout_alignParentBottom="true" app:layout_centerHorizontal="true" app:adSize="SMART_BANNER" app:adUnitId="@string/banner_ad_unit_id" />
    </RelativeLayout>
</FrameLayout>
